<nav class='flex items-center pt-3 pr-3 pl-3 pb-1 border-b border-amber-600 print_none'>
      <div class='flex justify-center items-center w-full'>
        <div class='md:flex justify-between w-full max-w-1670'>
          <div class='flex justify-center text-amber-600 mt-5'>
            <a href='/'>
              <img src=<%= vite_asset_path('images/logo_origin.png') %> width='280' alt='ロゴ' />
            </a>
          </div>
          <div class='flex justify-end items-end overflow-hidden mr-[10px]'>
            <div
              id='menu'
              class='md:mt-10 mt-2 translate-y-[50px] transition-all'
            >
              <div class='flex flex-col md:flex-row'>
                <strong class='md:flex mt-0 mr-2 text-amber-600'>
                  <%= current_user.email%>
                </strong>
                <div class='flex'>
                  <a
                    href='/usage'
                    id='usage_button'
                    class='inline-block text-center w-[97px] text-sm px-4 py-2 leading-none border rounded text-white border-slate-800 bg-slate-800 hover:border-transparent hover:bg-amber-600 lg:mt-0 mr-2'
                  >
                    使い方
                  </a>
              <a
                href='/users/edit'
                id='setting_button'
                class='inline-block text-center w-[97px] text-sm px-4 py-2 leading-none border rounded text-white border-slate-800 bg-slate-800 hover:border-transparent hover:bg-amber-600 lg:mt-0 mr-2'
              >
                設定
              </a>
              <a
                href='/users/sign_out'
                id='signout_button'
                class='inline-block text-center w-[97px] text-sm px-4 py-2 leading-none border rounded text-white border-slate-800 bg-slate-800 hover:border-transparent hover:bg-amber-600 lg:mt-0 mr-2'
              >
                サインアウト
              </a>
            </div>
          </div>
        </div>
        <button
          id='openButton'
          type='button'
          class='z-10'
          onClick="onClick()"
        >
          <i id='bars' class='fa-solid fa-bars fa-2x'></i>
        </button>
        <button
          id='closeButton'
          type='button'
          class='z-10 hidden'
          onClick="onClick()"
        >
          <i
            id='xmark'
            class='fa-solid fa-xmark fa-2x w-[28px]'
          ></i>
        </button>
      </div>
    </div>
  </div>
</nav>

<script>
  function onClick() {
    document
      .getElementById('menu')
      ?.classList.toggle('translate-y-[50px]');
    document
      .getElementById('closeButton')
      ?.classList.toggle('hidden');
    document
      .getElementById('openButton')
      ?.classList.toggle('hidden');
  }
</script>
