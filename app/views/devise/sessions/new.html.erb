<div class='w-full'>
  <div class="flex justify-center items-center mt-10">
    <div class="w-full max-w-xs">
        <h1 class="font-hairline mb-6 text-center">ログイン</h1>
        <%= form_for(resource,
                    as: resource_name,
                    url: session_path(resource_name),
                    html: {
                            class: "mb-4 px-8 pt-6 pb-8 rounded leading-none border border-amber-600"
                    }
            ) do |f| %>

          <%= devise_simple_error_messages! %>

          <% if flash.present? %>
              <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                  <%- flash.each do |name, msg| -%>
                      <%= content_tag :p,
                                      msg.humanize,
                                      id: "flash_#{name}" if msg.is_a?(String) %>
                  <%- end -%>
              </div>
          <% end %>

          <div class="mb-4">
              <%= f.label 'メールアドレス', class: "block text-gray-700 text-sm font-bold mb-2" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",id: "email_form",
                              class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight foucs:outline-none focus:shadow-outline"
              %>
          </div>

          <div class="mb-4">
            <%= f.label 'パスワード', class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= f.password_field :password,
                                  autocomplete: "current-password",
                                  class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-4">
              <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
              <%= f.label 'ログイン情報を保持する',class: "align-baseline inline-block text-gray-700 text-sm"%>
            </div>
          <% end %>

          <div class="mb-4 flex justify-center items-center">
              <%= f.submit "ログイン",
                          class: "button py-2 px-4 rounded inline-block text-md h-10 leading-none border rounded text-amber-600 border-amber-600 hover:border-transparent hover:text-white hover:bg-amber-600 hover:cursor-pointer"
              %>
          </div>
          <p><%= link_to "未登録の方はこちらからサインアップ", '/users/sign_up',
            class: "inline-block align-baseline text-sm text-amber-600  hover:underline"%></p>
          <p><%= link_to "パスワードを忘れた", new_user_password_path(resource_name),
            class: "inline-block align-baseline text-sm text-slate-400  hover:underline"%></p>
        <% end %>
        <%= render "devise/shared/form_footer" %>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
