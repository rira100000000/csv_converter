<head>
    <title>パスワードの再設定</title>
    <meta name="title" content="パスワードの再設定">
    <meta charset="UTF-8">
    <meta name="robots" content="noindex, nofollow">
    <meta name="description" content="パスワードの再設定を行います。">
</head>

<div class='app w-full'>
    <div class='content'>
        <div class="flex justify-center items-center mt-10">
            <div class="w-full max-w-xs">
                <h1 class="font-hairline mb-6 text-2xl font-bold text-center">パスワード再設定</h1>

                <%= form_for(resource,
                            url: user_password_path(),
                            html: {
                                    method: :put,
                                    class: "mb-4 px-8 pt-6 pb-8 rounded leading-none border border-amber-600 bg-white"
                            }
                    ) do |f| %>

                    <%#= render "devise/shared/error_messages", resource: resource %>

                    <%= devise_error_messages! %>

                    <%= f.hidden_field :reset_password_token %>

                    <div class="mb-4">
                        <%= f.label :password, "パスワード",
                                    class: "block font-bold text-gray-700 text-sm"
                        %>
                        <% if @minimum_password_length %>
                            <p class="text-amber-600 text-sm"><%= @minimum_password_length %> 文字以上の英数字</p>
                        <% end %>
                        <%= f.password_field :password,
                                            autofocus: true,
                                            autocomplete: "new-password",
                                            class: "appearance-none border border-gray-300 leading-tight focus:outline-none px-3 py-2 rounded text-gray-700 w-full"
                        %>
                    </div>

                    <div class="mb-4">
                        <%= f.label :password_confirmation,
                                    "パスワード(確認用)",
                                    class: "block font-bold text-gray-700 text-sm"
                        %>
                        <%= f.password_field :password_confirmation,
                                            autocomplete: "off",
                                            class: "appearance-none border border-gray-300 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none"
                        %>
                    </div>

                    <div class="mb-4">
                        <%= f.submit "設定",
                                    class: "button w-40 font-bold py-2 px-4 rounded w-full button py-2 px-4 rounded inline-block text-md h-10 leading-none border rounded text-white border-slate-800 bg-slate-800 hover:border-transparent hover:bg-amber-600 hover:cursor-pointer" 
                        %>
                    </div>
                <% end %>

                <%= render "devise/shared/form_footer" %>
            </div>
        </div>
    </div>
    <%= render 'shared/footer' %>
</div>
