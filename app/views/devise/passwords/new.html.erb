<head>
    <title>パスワードを忘れた</title>
    <meta name="title" content="パスワードを忘れた">
    <meta charset="UTF-8">
    <meta name="robots" content="noindex, nofollow">
    <meta name="description" content="パスワードの再設定にあたり、本人確認をするためのメールを送信します。">
</head>

<div class='app w-full'>
    <div class='content'>
        <div class="flex justify-center items-center mt-10">
            <div class="w-full max-w-xs">
                <h1 class="font-hairline mb-6 text-center">パスワード再設定用のメールを送ります</h1>
                <%= form_for(resource,
                            as: resource_name,
                            url: password_path(resource_name),
                            html: {
                                    method: :post,
                                    class: "mb-4 px-8 pt-6 pb-8 rounded leading-none border border-amber-600"
                            }) do |f| %>
                    <%#= render "devise/shared/error_messages", resource: resource %>
                    <%= devise_error_messages! %>
                    <div class="mb-4">
                        <%= f.label 'メールアドレス', class: "block font-bold mb-2 text-gray-700 text-sm" %>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                        class: "appearance-none border leading-tight focus:outline-none px-3 py-2 rounded shadow focus:shadow-outline text-gray-700 w-full"
                        %>
                    </div>
                    <div class="mb-4">
                        <%= f.submit "再設定メールを送信する",
                                    class: "button font-bold py-2 px-4 rounded w-full button py-2 px-4 rounded inline-block text-md h-10 leading-none border rounded text-amber-600 border-amber-600 hover:border-transparent hover:text-white hover:bg-amber-600 hover:cursor-pointer" %>
                    </div>
                    <p><%= link_to "戻る", '/users/sign_in',
                        class: "inline-block align-baseline text-sm text-slate-400  hover:underline"%></p>

                <% end %>
                <%= render "devise/shared/form_footer" %>
            </div>    
        </div>
    </div>
    <%= render 'shared/footer' %>
</div>
